datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

generator erd {
  provider    = "prisma-erd-generator"
  theme       = "dark"
  output      = "../DER.svg"
  ignoreEnums = true
  disabled    = true
}

// Enums
enum Role {
  user
  admin
}

enum SubscriptionStatus {
  inactive
  trial
  active
  cancelled
}

enum ContentType {
  food
  post
  comment
}

enum VoteType {
  up
  down
}

enum OrderStatus {
  pending
  confirmed
  preparing
  ready
  delivered
  cancelled
}

enum Visibility {
  public
  private
}

enum PostType {
  recipe
  post
}

enum LocalUserRole {
  admin
  staff
}

enum TypesCategory {
  Tipos_de_comida
  Estilos_o_dietas
  Origen_y_cultura
}

enum NotificationFrequency {
  FREQUENT
  RARE
  NONE
}

enum NotificationContentType {
  POST
  COMMUNITY
  LOCAL
  ORDER
  FOLLOWER
  COMMENT
}

enum DayOfWeek {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}

enum LocalEventType {
  TASK
  PAYMENT
  DELIVERY
  MEETING
  MAINTENANCE
  OTHER
}

enum EventStatus {
  PENDING
  COMPLETED
  CANCELLED
  IN_PROGRESS
}

enum SubscriptionStateMP {
  inactive
  authorized
  active
  paused
  cancelled
  finished
}

enum SubscriptionType {
  LOCAL
  COMMUNITY_USER
}

enum SubscriptionPlan {
  LOCAL_MONTHLY
  LOCAL_ANNUAL
  COMMUNITY_USER_MONTHLY
  COMMUNITY_USER_ANNUAL
}

// MODELS
model User {
  // 1. IDENTIFICACIÓN Y PERFIL
  id         String  @id @default(cuid()) @map("id")
  slug       String
  name       String
  email      String  @unique
  avatar_url String?
  role       Role    @default(user)
  active     Boolean @default(true)
  verified   Boolean @default(false)

  // 2. AUTENTICACIÓN Y SEGURIDAD
  password_hash    String?
  provider         String    @default("local")
  reset_code       String?
  reset_expires_at DateTime?

  // 3. CONFIGURACIÓN Y NEGOCIO
  is_business         Boolean               @default(false)
  subscription_status SubscriptionStatus    @default(inactive)
  trial_ends_at       DateTime?
  notificationsPref   NotificationFrequency @default(FREQUENT)

  // 4. TIMESTAMPS
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // 5. RELACIONES
  notifications       Notification[]
  owned_businesses    Business[]        @relation("BusinessOwner")
  local_users         LocalUser[]
  local_reviews       LocalReview[]
  votes               Vote[]            @relation("UserVotes")
  created_communities Community[]       @relation("Creator")
  community_members   CommunityMember[]
  posts               Post[]
  comments            PostComment[]
  orders              Order[]
  subscriptions       Subscription[]
  preferences         UserPreference[]
  //userAchievement     UserAchievement[]
  recipes             Recipe[]
  //following           Follows[]         @relation("FollowingRelation")
  //followers           Follows[]         @relation("FollowerRelation")

  @@index([email])
}

model Notification {
  id           String                   @id @default(cuid()) @map("id")
  user_id      String
  content_type NotificationContentType?
  content_id   String?

  metadata Json?

  message    String
  read       Boolean  @default(false)
  deleted    Boolean  @default(false)
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@index([created_at, user_id])
}

/**
 * model Follows {
 * // El usuario que sigue (ej: A sigue a B)
 * follower    User   @relation("FollowingRelation", fields: [follower_id], references: [id])
 * follower_id String
 * // El usuario que es seguido (ej: B es seguido por A)
 * following    User   @relation("FollowerRelation", fields: [following_id], references: [id])
 * following_id String
 * created_at   DateTime @default(now())
 * @@id([follower_id, following_id])
 * }
 */

model UserPreference {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  food_category_id Int?
  community_tag_id Int?

  foodCategory FoodCategory? @relation(fields: [food_category_id], references: [id])
  communityTag CommunityTag? @relation(fields: [community_tag_id], references: [id])

  @@unique([user_id, food_category_id])
  @@unique([user_id, community_tag_id])
}

model Business {
  id         String   @id @default(cuid()) @map("id")
  name       String?
  owner_id   String
  owner      User     @relation("BusinessOwner", fields: [owner_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  active     Boolean  @default(true)

  branches Local[]
}

model Local {
  id              String   @id @default(cuid()) @map("id")
  slug            String   @unique
  name            String
  description     String?
  address         String?
  phone           String?
  email           String?
  image_url       String
  latitude        Float?
  longitude       Float?
  categorias_menu String[]
  average_rating  Float    @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  business_id     String
  business        Business            @relation(fields: [business_id], references: [id])
  local_users     LocalUser[]
  foods           Food[]
  orders          Order[]
  reviews         LocalReview[]
  menu_categories LocalMenuCategory[]

  schedules       LocalSchedule[]
  calendar_events LocalCalendarEvent[]
  notes           LocalNote[]
  Subscription    Subscription[]

  @@index([business_id])
}

model LocalSchedule {
  id          String    @id @default(cuid())
  day_of_week DayOfWeek
  open_time   String
  close_time  String
  local_id    String
  local       Local     @relation(fields: [local_id], references: [id])

  @@unique([local_id, day_of_week])
}

model LocalMenuCategory {
  id               Int     @id @default(autoincrement())
  name             String
  description      String?
  icon_url         String?
  local_id         String
  food_category_id Int?

  local         Local         @relation(fields: [local_id], references: [id])
  food_category FoodCategory? @relation(fields: [food_category_id], references: [id])

  foods Food[]

  @@unique([local_id, name])
  @@index([local_id])
  @@index([food_category_id])
}

model LocalCalendarEvent {
  id       String @id @default(cuid()) @map("id")
  local_id String
  local    Local  @relation(fields: [local_id], references: [id])

  title       String
  description String?
  start_time  DateTime
  end_time    DateTime?
  is_full_day Boolean   @default(false)

  event_type LocalEventType @default(TASK)
  status     EventStatus    @default(PENDING)
  priority   Int            @default(1)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([local_id, start_time])
}

model LocalNote {
  id       String @id @default(cuid()) @map("id")
  local_id String
  local    Local  @relation(fields: [local_id], references: [id])

  title        String
  content      String
  is_pinned    Boolean   @default(false)
  is_completed Boolean   @default(false)
  due_date     DateTime?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([local_id, is_pinned, due_date])
}

model LocalUser {
  id         String        @id @default(cuid()) @map("id")
  user       User          @relation(fields: [user_id], references: [id])
  user_id    String
  local      Local         @relation(fields: [local_id], references: [id])
  local_id   String
  role       LocalUserRole @default(staff)
  joined_at  DateTime      @default(now())
  updated_at DateTime      @updatedAt

  @@unique([user_id, local_id])
  @@index([local_id])
}

model FoodCategory {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  description String?
  tipo        TypesCategory
  icon_url    String?

  foods            Food[]
  user_preferences UserPreference[]
  local_categories LocalMenuCategory[]

  @@index([name])
}

model Food {
  id                     String        @id @default(cuid()) @map("id")
  slug                   String?
  local                  Local         @relation(fields: [local_id], references: [id])
  local_id               String
  category               FoodCategory? @relation(fields: [category_id], references: [id])
  category_id            Int?
  local_menu_category_id Int?
  name                   String
  description            String?
  price                  Float
  discount               Boolean       @default(false)
  image_url              String?
  available              Boolean       @default(true)
  votes_up               Int           @default(0)
  votes_down             Int           @default(0)
  created_at             DateTime      @default(now())
  updated_at             DateTime      @updatedAt

  order_items OrderItem[]

  local_menu_category LocalMenuCategory? @relation(fields: [local_menu_category_id], references: [id])

  @@index([local_id])
  @@index([name])
  @@index([price])
  @@index([category_id])
  @@index([local_menu_category_id])
}

/**
 * Promoción  (tabla para evitar que solo una comida tenga solo una promo
 */

model Vote {
  id           Int         @id @default(autoincrement())
  user         User        @relation("UserVotes", fields: [user_id], references: [id])
  user_id      String
  content_type ContentType
  content_id   String
  vote_type    VoteType
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt

  //food Food? @relation("FoodVotes", fields: [content_id], references: [id])

  @@unique([user_id, content_type, content_id])
}

model LocalReview {
  id         String   @id @default(cuid()) @map("id")
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  local      Local    @relation(fields: [local_id], references: [id])
  local_id   String
  rating     Int
  comment    String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([user_id, local_id])
}

model TagCategory {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  name        String  @unique
  description String?
  icon_url    String?

  communityTags CommunityTag[]
}

model Community {
  id            String     @id @default(cuid()) @map("id")
  slug          String     @unique
  name          String
  description   String
  image_url     String?
  theme_color   String?
  visibility    Visibility @default(public)
  total_members Int        @default(0)
  creator       User       @relation("Creator", fields: [creator_id], references: [id])
  creator_id    String
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  active        Boolean    @default(true)

  members CommunityMember[]
  posts   Post[]

  tags CommunityTag[] @relation("CommunityTags") // many-to-many
}

model CommunityTag {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  category    TagCategory? @relation(fields: [category_id], references: [id])
  category_id Int?

  active           Boolean          @default(true)
  communities      Community[]      @relation("CommunityTags")
  user_preferences UserPreference[]
}

model CommunityMember {
  id                     String                @id @default(cuid()) @map("id")
  user                   User                  @relation(fields: [user_id], references: [id])
  user_id                String
  community              Community             @relation(fields: [community_id], references: [id])
  community_id           String
  receives_notifications NotificationFrequency @default(RARE)
  joined_at              DateTime              @default(now())
  updated_at             DateTime              @updatedAt
  is_moderator           Boolean               @default(false)

  @@unique([user_id, community_id])
  @@index([community_id])
}

model Recipe {
  id          String @id @default(cuid()) @map("id")
  slug        String
  user        User   @relation(fields: [user_id], references: [id])
  user_id     String
  name        String
  description String
  total_time  Int?
  main_image  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  ingredients RecipeIngredient[]
  steps       RecipeStep[]
  posts       Post[]
}

model RecipeIngredient {
  id                 String        @id @default(cuid()) @map("id")
  recipe             Recipe        @relation(fields: [recipe_id], references: [id])
  recipe_id          String
  ingredient         Ingredient    @relation(fields: [ingredient_id], references: [id])
  ingredient_id      Int
  quantity           String
  unit_of_measure    UnitOfMeasure @relation(fields: [unit_of_measure_id], references: [id])
  unit_of_measure_id Int
  notes              String?

  @@index([ingredient_id])
}

model RecipeStep {
  id             String  @id @default(cuid()) @map("id")
  recipe         Recipe  @relation(fields: [recipe_id], references: [id])
  recipe_id      String
  step_number    Int
  description    String
  image_url      String?
  estimated_time Int?

  @@unique([recipe_id, step_number])
}

model Post {
  id             String    @id @default(cuid()) @map("id")
  slug           String
  user           User      @relation(fields: [user_id], references: [id])
  user_id        String
  community      Community @relation(fields: [community_id], references: [id])
  community_id   String
  title          String
  content        String
  image_urls     String[]
  type           PostType
  votes_up       Int       @default(0)
  votes_down     Int       @default(0)
  total_comments Int       @default(0)
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  edited         Boolean   @default(false)
  active         Boolean   @default(true)

  comments  PostComment[]
  recipe    Recipe?       @relation(fields: [recipe_id], references: [id])
  recipe_id String?
}

model PostComment {
  id                String       @id @default(cuid()) @map("id")
  user              User         @relation(fields: [user_id], references: [id])
  user_id           String
  post              Post         @relation(fields: [post_id], references: [id])
  post_id           String
  parent_comment    PostComment? @relation("CommentReplies", fields: [parent_comment_id], references: [id])
  parent_comment_id String?
  content           String
  votes_up          Int          @default(0)
  votes_down        Int          @default(0)
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt
  edited            Boolean      @default(false)
  active            Boolean      @default(true)

  replies PostComment[] @relation("CommentReplies")

  @@index([post_id])
  @@index([user_id])
  @@index([parent_comment_id])
}

model UnitOfMeasure {
  id                 Int                @id @default(autoincrement())
  name               String             @unique
  abbreviation       String?            @unique
  recipe_ingredients RecipeIngredient[]
}

model Ingredient {
  id                 Int                @id @default(autoincrement())
  name               String             @unique
  description        String?
  recipe_ingredients RecipeIngredient[]
}

model Order {
  id             String      @id @default(cuid()) @map("id")
  user           User        @relation(fields: [user_id], references: [id])
  user_id        String
  local          Local       @relation(fields: [local_id], references: [id])
  local_id       String
  total          Float
  status         OrderStatus @default(pending)
  payment_method String?
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
  delivery_date  DateTime?
  notes          String?

  order_items OrderItem[]
}

model OrderItem {
  id         String  @id @default(cuid()) @map("id")
  order      Order   @relation(fields: [order_id], references: [id])
  order_id   String
  food       Food    @relation(fields: [food_id], references: [id])
  food_id    String
  quantity   Int     @default(1)
  unit_price Float
  subtotal   Float
  notes      String?
}

model Subscription {
  id String @id @default(cuid()) @map("id")

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  local    Local?  @relation(fields: [local_id], references: [id])
  local_id String? @map("local_id")

  mp_preapproval_id String

  subscription_type SubscriptionType
  plan              SubscriptionPlan
  amount            Float
  currency_id       String              @default("ARS")
  status            SubscriptionStateMP @default(authorized)

  start_date        DateTime
  next_payment_date DateTime?
  end_date          DateTime?
  auto_renew        Boolean   @default(true)

  payment_history Json?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([user_id, local_id, subscription_type])
  @@index([mp_preapproval_id])
}
